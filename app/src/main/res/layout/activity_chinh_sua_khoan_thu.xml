<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ChinhSuaKhoanThu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTenThu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="    Tên khoản thu"
                android:textColor="#59DFC4"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etTenThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSoTienThu"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="     Số tiền thu"
                android:textColor="#59DFC4"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etSoTienThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNgayThu"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="     Ngày thu"
                android:textColor="#59DFC4"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNgayThu_Ngay"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="20sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnChonNgay"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..." />


        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="30dp" />



        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvViTien2"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="     Ví tiền"
                android:textColor="#59DFC4"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spVitien2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThemThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F3BCBC"
                android:text="Thêm" />

            <View
                android:id="@+id/view15"
                android:layout_width="20dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btnXoaThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E69061"
                android:text="Xóa" />

            <View
                android:id="@+id/view11"
                android:layout_width="20dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btnLuuThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F1DC9F"
                android:text="Lưu" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>